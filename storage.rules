rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // --- HELPER FUNCTIONS ---

    // Basic check for signed-in user
    function isSignedIn() {
      return request.auth != null;
    }

    // Fetch the user's profile
    function getUserData() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
    }

    // Check if the User's org matches the folder's org
    function belongsToOrg(orgId) {
      return isSignedIn() && getUserData().organizationId == orgId;
    }

    // Check if the user has a specific role (e.g., 'admin', 'maintainer')
    function hasRole(role) {
      return isSignedIn() && getUserData().role == role;
    }

    // --- STORAGE RULES ---

    match /organizations/{orgId} {
      
      match /audits/{auditId}/{allPaths=**} {
        // Anyone in the organization can see drawer audit photos
        allow read: if belongsToOrg(orgId);
        
        // Any maintainer in the organization can upload drawer audit photos
        allow write: if belongsToOrg(orgId) && hasRole('maintainer');
      }

      match /templates/{templateId}/{allPaths=**} {
        // Anyone in the organization can see template images
        allow read: if belongsToOrg(orgId);
        
        // Any admin in the organization can upload template images
        allow write: if belongsToOrg(orgId) && hasRole('admin');
      }
    }
  }
}
