{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "lib",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["./src/shared/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"]
}